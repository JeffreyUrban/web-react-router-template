{
  "name": "web-react-router-template",
  "version": "1.0.0",
  "description": "A minimal React Router 7 template with Tailwind CSS 4, TypeScript, and dark mode support",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "HOST=0.0.0.0 PORT=3000 react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "check:links": "tsx scripts/check-links.ts",
    "check:links:local": "tsx scripts/check-links.ts http://localhost:3000",
    "check:external-links": "vitest run app/test/external-links.test.ts",
    "check:images": "bash scripts/validate-images.sh",
    "check-node-version": "node -e \"console.log('Node.js ' + process.version + (require('semver').satisfies(process.version, require('./package.json').engines.node) ? ' âœ“' : ' âœ— (expected: ' + require('./package.json').engines.node + ')'))\"",
    "predev": "npm run check-node-version",
    "prebuild": "npm run check-node-version",
    "prepare": "husky"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@react-router/node": "^7.1.1",
    "@react-router/serve": "^7.1.1",
    "@tailwindcss/typography": "^0.5.19",
    "@web3forms/react": "^1.1.3",
    "clsx": "^2.1.1",
    "isbot": "^5.1.21",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.68.0",
    "react-router": "^7.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@flydotio/dockerfile": "^0.7.5",
    "@mdx-js/rollup": "^3.1.1",
    "@react-router/dev": "^7.1.1",
    "@react-router/fs-routes": "^7.1.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.22",
    "cheerio": "^1.1.2",
    "eslint": "^9.19.0",
    "eslint-import-resolver-typescript": "^4.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "linkinator": "^7.5.1",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "remark-frontmatter": "^5.0.0",
    "remark-mdx-frontmatter": "^5.2.0",
    "semver": "^7.7.3",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.0.0",
    "vite-imagetools": "^9.0.2",
    "vite-tsconfig-paths": "^6.0.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md,mdx,css}": [
      "prettier --write"
    ]
  }
}
